<SvgWidget>:
    do_rotation: False

<Light>:
    id:light
    do_rotation: False
    do_scale: False
    auto_bring_to_front: False
    size_hint: None, None
    size: 100, 100
    canvas:
        Rectangle:
            source: './img/light.png'
            size:self.size
    BoxLayout:
        SubWidget:

<SubWidget>:
    pos: root.width/2 , root.height/2
    size_hint: None, None
    size: 50, 50
    canvas:
        Color:
            rgb: 1,0,0
        Rectangle:
            pos: self.pos
            size:self.size
