<SvgWidget>:
    do_scale: False
    do_rotation: False

<Light>:
    id:light
    do_rotation: False
    do_scale: False
    auto_bring_to_front: False
    size_hint: None, None
    size: 100, 100
    canvas:
        Rectangle:
            source: './img/light.png'
            size:self.size

<SubLight>:
    pos: root.width/2, root.height/2
    size_hint: None, None
    size: 25, 25
    canvas:
        Color:
            rgb: 1,0,0
        Ellipse:
            pos: self.pos
            size:self.size
